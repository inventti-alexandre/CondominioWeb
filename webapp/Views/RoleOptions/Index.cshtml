@model BuildingProject.ModelView.RoleOptionView

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{


    <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
        <header>
            <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
            <h2>Opciones - @Model.role.name </h2>
        </header>
        <div>
            <div class="jarviswidget-editbox">
            </div>
            <div class="widget-body">
                <fieldset>
                    <div class="row">
                        <div class="col-sm-4">
                            <a data-toggle="modal" style="background-color:#1b1e24; color:white" href="#myModal" class="btn"><i class="fa fa-circle-arrow-up fa-lg"></i> Agregar Opciones</a>
                            <a href="~/Roles/Index" style="background-color:#1b1e24; color:white" class="btn">Regresar</a>
                        </div>

                        <div class="col-sm-4">
                            
                        </div>

                        
                        <div class="col-sm-8">
                        </div>
                    </div>
                    <br />

                    <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>Opciones</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.roleOptionList.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model.roleOptionList[i].option.name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Eliminar", "Delete", new { id = @Model.roleOptionList[i].roleOptionID })
                                    </td>
                                </tr>
                                @Html.HiddenFor(modelItem => Model.roleOptionList[i].roleOptionID)
                            }
                        </tbody>
                    </table>
                </fieldset>
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.role.roleID)



    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                </div>
                <div class="modal-body no-padding">
                    <form id="login-form" class="smart-form">
                        <fieldset>
                            <section>
                                <br />
                                <table id="dt_basic2" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Opciones</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < Model.options.Count(); i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.options[i].name)
                                                </td>
                                                <td>
                                                    @Html.CheckBoxFor(modelItem => Model.options[i].selected)
                                                </td>
                                            </tr>
                                            @Html.HiddenFor(modelItem => Model.options[i].optionID)
                                            @Html.HiddenFor(modelItem => Model.options[i].selected)
                                        }
                                    </tbody>
                                </table>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" name="ActionForm" value="Registrar" style="background-color:#1b1e24; color:white" class="btn" />
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </fieldset>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

}
