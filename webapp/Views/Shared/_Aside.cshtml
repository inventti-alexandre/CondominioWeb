                            <a href="@Url.Action("index", "Options")" title="Maestros"><span class="menu-item-parent">@option.GetOption(3).name</span></a>
                        </li>
                    }
                    @if (option.ValidateOption(DataUtil.GetUser().userID, 4))
                    {
                        <li>
                            <a href="@Url.Action("index", "Buildings")" title="Maestros"><span class="menu-item-parent">@option.GetOption(4).name</span></a>
                        </li>
                    }
                    @if (option.ValidateOption(DataUtil.GetUser().userID, 5))
                    {
