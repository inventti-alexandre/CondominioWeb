@using BuildingProject.DataAccess
@{
    var option = new DataUtil();
}
<aside id="left-panel">
    <nav>
        <ul>
            <li>
                <a href="#" title="Maestros"><i class="fa fa-lg fa-fw fa-home"></i> <span class="menu-item-parent">Maestros</span></a>
                <ul>
                    @if (option.ValidateOption(DataUtil.GetUser().userID, 1))
                    {
                        <li>
                            <a href="@Url.Action("index", "Users")" title="Maestros"><span class="menu-item-parent">@option.GetOption(1).name</span></a>
                        </li>
                    }
                    @if (option.ValidateOption(DataUtil.GetUser().userID, 2))
                    {
                        <li>
                            <a href="@Url.Action("index", "Roles")" title="Maestros"><span class="menu-item-parent">@option.GetOption(2).name</span></a>
                        </li>
                    }
                    @if (option.ValidateOption(DataUtil.GetUser().userID, 3))
                    {
